[core]
  editor = nvim
  autocrlf = input
  excludesfile = ~/.gitignore.global
  attributesfile = ~/.gitattributes.global
[alias]
  tree = log --graph --oneline --decorate
[include]
  path = ~/.gitconfig.override
[diff "sopsdiffer"]
  textconv = sops -d
